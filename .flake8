[flake8]
# Максимальная длина строки
max-line-length = 88
# Игнорировать E203 (whitespace before ':'), E266 (old string formatting), E501 (line too long), W503 (line break before binary operator), F401 (imported but unused), F403 (imported module not used)
ignore = E203, E266, E501, W503, F401, F403
# Исключения и файлы, которые необходимо проигнорировать
exclude =
    .git,
    __pycache__,
    migrations,
    .venv,
    .eggs,
    *.egg,
    *.pyc,
    *.pyo,
    .pytest_cache,
    .vscode,
    .mypy_cache,
    .mypy_cache,
    .vscode,
    .vscode-test,
    .ropeproject
# Исключить директории, которые содержат файлы с именем __init__.py
per-file-ignores =
    __init__.py: F401
